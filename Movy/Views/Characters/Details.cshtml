@model Movy.Models.Character

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>Character</h4>
    <hr />
    <h3>@Html.DisplayNameFor(model => model.Roles)</h3>
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped">
                <tr>
                    <th>Movie</th><th>Actor</th>
                </tr>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@Html.ActionLink(role.Movie.Name, "Details", "Movies", new { id = role.Movie.Id }, null)</td>
                        <td>@Html.ActionLink(role.Person.Name, "Details", "People", new { id = role.Person.Id }, null)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<hr />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
